{
    "plugin": {
        "description": "Initializes a new jinitializer plugin project.",
        "commands": {
            "plugins": [ 
                "create-plugin"
            ]
        }
    },
    "laravel-local": { 
        "description": "Initializes a new local laravel project.",
        "onAbort": {
            "shell": [
                "rm -r [PROJECT_DIRECTORY]"
            ]
        },
        "commands": {
            "mysql": [
                "create-database",
                "create-user"
            ],
            "laravel": [
                "create-project",
                "mysql-database"
            ],
            "shell": [
                "tags"
            ],
            "git": [
                "init",
                "create-upstream-bitbucket",
                "ignore --tags"
            ],
            "apache2": [
                "create-site-local",
                "reload",
                "setup host"
            ],
            "shell": [
                "composer install",
                "npm install",
                "chgrp -R www-data {APP_PATH}/{APP_NAME}"
            ]
        }
    },
    "php-package": {
        "description": "Create a new generic php package.",
        "commands": {
            "project": [
                "create",
                "folder src",
                "folder tests",
                "folder tests/Unit",
                "folder tests/Feature",
                "folder tests/Traits",
                "folder tests/output",
                "copy phpunit.xml",
                "copy-stub composer.stub"
            ],
            "phpunit": [ 
                
            ],
            "composer": [

            ],
            "git": [
                "init",
                "create-upstream-github",
                "ignore tags",
                "ignore vendor",
                "ignore tests/output"
            ],
            "shell": [
                "ctags -R --fields=+laimS --languages=php --exclude=.git"
            ]
        }
    }
}
